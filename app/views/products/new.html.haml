.contents
  -# ↓コントローラ作成後,createページに飛ぶように指定して下さい(createのview作成済み)
  =form_with url: products_path, method: :post, class: 'contents__form' do |f|
    .contents__form__image
      .contents__form__image__box
        %p.contents__form__image__box__text 出品画像
        %p.contents__form__image__box__alert 必須
      .contents__form__image__title 最大10枚までアップロードできます
      %label
        .contents__form__image__area
          =icon 'fa', 'camera', class: 'contents__form__image__area__icon'
          %p.contents__form__image__area__text
            ドラッグアンドドロップ
            %br
            またはクリックしてファイルをアップロード
        =f.file_field :image, class: 'contents__form__image__select'
    .contents__form__item
      .contents__form__item__box
        %p.contents__form__item__box__text 商品名
        %p.contents__form__item__box__alert 必須
      =f.text_field :text, placeholder: '40文字まで', class: 'contents__form__item__textinput insert'
      .contents__form__item__explanation
        %p.contents__form__item__explanation__text 商品の説明
        %p.contents__form__item__explanation__alert 必須
      =f.text_area :text, placeholder: "商品の説明（必須 1,000文字以内）\r\n（色、素材、重さ、定価、注意点など）\r\n\r\n例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", class: 'contents__form__item__textarea insert'
      %p.contents__form__item__count 0/1000
    .contents__form__detail
      %p.contents__form__detail__title 商品の詳細
      .contents__form__detail__category
        %p.contents__form__detail__category__text カテゴリー
        %p.contents__form__detail__category__alert 必須
      -# ↓後でcollection_selectメソッドに変更,カラム名も適切な物に変更して下さい
      =f.select :aaaaaa, [ ["test1",1], ["test2", 2], ["test3", 3] ], { prompt: "選択して下さい" }, { class: 'contents__form__detail__select insert' }
      .contents__form__detail__brand
        %p.contents__form__detail__brand__text ブランド
        %p.contents__form__detail__brand--any 任意
      -# ↓後でcollection_selectメソッドに変更,カラム名も適切な物に変更して下さい
      =f.text_field :text, placeholder: '例）シャネル', class: 'contents__form__detail__textinput'
      .contents__form__detail__status
        %p.contents__form__detail__status__text 商品の状態
        %p.contents__form__detail__status__alert 必須
      -# ↓後でcollection_selectメソッドに変更,カラム名も適切な物に変更して下さい
      =f.select :aaaaaa, [ ["test1",1], ["test2", 2], ["test3", 3] ], { prompt: "選択して下さい" }, { class: 'contents__form__detail__select insert' }
    .contents__form__shipping
      %p.contents__form__shipping__title 配送について
      .contents__form__shipping__category
        %p.contents__form__shipping__category__text 配送料の負担
        %p.contents__form__shipping__category__alert 必須
      -# ↓後でcollection_selectメソッドに変更,カラム名も適切な物に変更して下さい
      =f.select :aaaaaa, [ ["test1",1], ["test2", 2], ["test3", 3] ], { prompt: "選択して下さい" }, { class: 'contents__form__shipping__select insert' }
      .contents__form__shipping__brand
        %p.contents__form__shipping__brand__text 発送元の地域
        %p.contents__form__shipping__brand__alert 必須
      -# ↓後でcollection_selectメソッドに変更,カラム名も適切な物に変更して下さい
      =f.select :aaaaaa, [ ["test1",1], ["test2", 2], ["test3", 3] ], { prompt: "選択して下さい" }, { class: 'contents__form__shipping__select insert' }
      .contents__form__shipping__status
        %p.contents__form__shipping__status__text 発送までの日数
        %p.contents__form__shipping__status__alert 必須
      -# ↓後でcollection_selectメソッドに変更,カラム名も適切な物に変更して下さい
      =f.select :aaaaaa, [ ["test1",1], ["test2", 2], ["test3", 3] ], { prompt: "選択して下さい" }, { class: 'contents__form__shipping__select insert' }
    .contents__form__price
      %p.contents__form__price__title 価格（￥300〜9,999,999）
      .contents__form__price__box
        .contents__form__price__box__left
          %p.contents__form__price__box__left__text 販売価格
          %p.contents__form__price__box__left__alert 必須
        .contents__form__price__box__right
          %span.contents__form__price__box__right__yen  ￥
          -# ↓カラム名未指定
          =f.number_field :aaaaaa, placeholder: '0', class: 'contents__form__price__box__right__numinput', min: 300, max: 9999999
      .contents__form__price__fee
        %span.contents__form__price__fee__text 販売手数料（10％）
        .contents__form__price__fee__num ー
      .contents__form__price__profit
        %span.contents__form__price__profit__text 販売利益
        .contents__form__price__profit__num ー
    .contents__form__btn
      =f.submit '出品する', class: 'contents__form__btn__submit'
      -# ↓リンク先未指定
      =link_to 'もどる', '#', class: 'contents__form__btn__back'